<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">
    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:foreground="@color/colorPrimary"/>
    <View
        android:id="@+id/asdf"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:foreground="@color/colorAccent"/>
    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@id/asdf"
        android:layout_alignTop="@id/asdf"
        android:layout_marginLeft="-50dp"
        android:layout_marginTop="-50dp"
        android:foreground="@color/colorPrimary"/>
    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignRight="@id/asdf"
        android:layout_alignBottom="@id/asdf"
        android:layout_marginRight="-50dp"
        android:layout_marginBottom="-50dp"
        android:foreground="@color/colorPrimary"/>
    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:foreground="@color/colorAccent"/>
</RelativeLayout>